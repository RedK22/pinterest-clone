<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pinterest Clone</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white flex justify-center">
    <!--! Feed Container -->
    <div
      class="columns-2 md:columns-3 lg:columns-4 xl:columns-5 w-[90%] py-4 gap-x-2 gap-y-4"
    >
      <!--! Image Pin -->

      <div class="posts">
        <% posts.forEach(function(post){ %>
        <div class="m-2 break-inside-avoid">
          <a href="/images/uploads/<%= post.image %>">
            <img
              src="/images/uploads/<%= post.image %>"
              class="w-full rounded-lg"
              alt="<%= post.imageText %> Image"
            />
          </a>
          <div class="text-sm mt-2"><%= post.imageText %></div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
